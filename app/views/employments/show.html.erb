<div class="row">
  <div class="col-lg-8">
    <h2><%= @employment.person.name %> <small>employed by</small> <%= @employment.place.name %></h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
        <% end %>
      </li>
      <li><a href="#">Database</a></li>
      <li><a href="#">Employments</a></li>
      <li class="active"><%= @employment.person.name %> employed by <%= @employment.place.name %></li>
    </ol>
  </div>
</div>


<div class="row">
  
  <div class="col-sm-4">
    <h3>Place</h3>
    <span class="glyphicon glyphicon-map-marker"></span> <%= link_to @employment.place.name, @employment.place %>
    
    <h3>Person</h3>
    <span class="glyphicon glyphicon-user"></span> <%= link_to @employment.person.name, @employment.person %>
  </div>
  
  <div class="col-sm-8">
    <h3>Info</h3>
    <dl class="dl-horizontal">
      <dt>Title</dt>
      <dd>
        <% if editable_object? @employment %>
          <span id="title"
            data-type="text"
            data-pk=<%= @employment.id %>
            data-url="/employments/<%= @employment.id %>"
            data-title="Title">
            <%= @employment.title %>
          </span>
        <% else %>
          <%= @employment.title %>
        <% end %>
      </dd>
            
      <dt>Start Date</dt>
      <dd>
        <% if editable_object? @employment %>
          <span id="start_date"
            data-type="combodate"
            data-pk=<%= @employment.id %>
            data-url="/employments/<%= @employment.id %>"
            data-title="start_date">
            <%= @employment.start_date %>
          </span>
        <% else %>
          <%= @employment.start_date %>
        <% end %>
      </dd>
      
      <dt>End Date</dt>
      <dd>
        <% if editable_object? @employment %>
          <span id="end_date"
            data-type="combodate"
            data-pk=<%= @employment.id %>
            data-url="/employments/<%= @employment.id %>"
            data-title="end_date">
            <%= @employment.end_date %>
          </span>
        <% else %>
          <%= @employment.end_date %>
        <% end %>
      </dd>
      
      <dt>Current Job</dt>
      <dd>
        <% if editable_object? @employment %>
          <span id="current_job"
            data-type="select"
            data-pk=<%= @employment.id %>
            data-url="/employments/<%= @employment.id %>"
            data-title="current_job">
            <%= @employment.current_job %>
          </span>
        <% else %>
          <%= @employment.current_job %>
        <% end %>
      </dd>
      
      <dt>Details</dt>
      <dd>
        <% if editable_object? @employment %>
          <span id="details"
            data-type="textarea"
            data-pk=<%= @employment.id %>
            data-url="/employments/<%= @employment.id %>"
            data-title="details">
            <%= @employment.details %>
          </span>
        <% else %>
          <%= @employment.details %>
        <% end %>
      </dd>
    </dl>
    
  </div>
  
</div>