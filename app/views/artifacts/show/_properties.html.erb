            <% if editable_object? @artifact %>
                <span id="date_created"
                    data-type="text"
                    data-pk=<%= @artifact.uuid %>
                    data-url="/artifacts/<%= @artifact.uuid %>"
                    data-title="Date Created">
                    <%= @artifact.date_created %>
                </span>
            <% else %>
                <%= @artifact.date_created %>
            <% end %>
        </dd>
        
        <dt>Dimensions</dt>
        <dd>
            <% if editable_object? @artifact %>
                <span id="dimensions"
                    data-type="text"
                    data-pk=<%= @artifact.uuid %>
                    data-url="/artifacts/<%= @artifact.uuid %>"
                    data-title="Dimensions">
                    <%= @artifact.dimensions %>
                </span>
            <% else %>
                <%= @artifact.dimensions %>
            <% end %>
        </dd>

    </dl>
</div>