<div class="row">
  <!-- Name -->
  <div class="col-lg-8">
    <h2>Search</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
        <% end %>
      </li>
      <li class="active">Search</li>
    </ol>
  </div>
</div>

<div class="row">
  <!-- Breadcrumbs -->
  <div class="col-lg-8">

    <%= page_entries_info @results %>

    <table class="table table-striped table-hover">
      <% @searchable.each do |r| %>
        <tr>
          <td class="col-sm-2">
            <% if r.has_photos? %>
              <%= link_to p do %>
                <%= image_tag r.default_photo_uploader.object_thumb.url, class: 'img-responsive' %>
              <% end %>
            <% else %>
              <%= link_to r do %>
                <img data-src="holder.js/95x95/text:No Photo" class="img-responsive"/>
              <% end %>
            <% end %>
          </td>
          <td>
            <h4><%= link_to r.name, r %></h4>
            <p><small><%= r.description %></small></p>
          </td>
        </tr>
      <% end %>
    </table>
    
    <%= paginate @results %>
  </div>

  <div class="col-lg-4">
    <h3>Filter Results</h3>
    <div class="well">
      <form id="filter">
        <%= hidden_field_tag 'q', @query%>
        <div class="checkbox">
          <label>
            <%= check_box_tag 'artifact', nil, @filters["artifact"] %> Artifacts
          </label>
        </div>

        <div class="checkbox">
          <label>
            <%= check_box_tag 'person', nil, @filters["person"] %> People
          </label>
        </div>

        <div class="checkbox">
          <label>
            <%= check_box_tag 'place', nil, @filters["place"] %> Places
          </label>
        </div>

        <div class="checkbox">
          <label>
            <%= check_box_tag 'source', nil, @filters["source"] %> Sources
          </label>
        </div>

        <br>
        <button type="submit" class="btn btn-default">Filter</button>

      </form>
    </div>
  </div>
</div>