<div class="row">
    <div class="col-lg-8">
        <h2>View Photo</h2>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <%= image_tag @photo.image.show.url %>
    </div>
    <div class="col-lg-4">
        <div class="well well-sm">
            <h4>In this photo:</h4>
            <table class="table table-striped table-hover">
                <% @photo.objects.each do |o| %>
                    <tr>
                        <td width="40"><%= image_tag o.default_photo.image.small_thumb.url %></td>
                        <td><%= link_to polymorphic_path(o) do %><%= o.name %><% end %></td>
                    </tr>
                <% end %>
            </table>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <h4>Comments:</h4>
        <% if @photo.comments %>
            <p><%= @photo.comments %></p>
        <% else %>
            <p>No comments.</p>
        <% end %>
    </div>
</div>