<div class="row">
    <div class="col-lg-9">
        <h2>View Photo</h2>
    </div>
    <div class="col-lg-3">
      <br/>
      <div class="pull-right">
        <%= link_to photo_history_path(@photo), class: 'btn btn-warning btn-sm' do %>
          <span class="glyphicon glyphicon-th-list"></span> 
          History
        <% end %>
        <a href="#" class="btn btn-danger btn-sm">
          <span class="glyphicon glyphicon-remove"></span> 
          Delete
        </a>
      </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-8">
        <%= image_tag @photo.image.show.url %>
    </div>
    <div class="col-lg-4">
        <div class="row">
          <div class="col-sm-12">
            <div class="well well-sm">
                <h4>In this photo:</h4>
                <table class="table table-striped table-hover">
                    <% @photo.objects.each do |o| %>
                        <tr>
                            <td width="40"><%= image_tag o.default_photo.image.small_thumb.url %></td>
                            <td><%= link_to polymorphic_path(o) do %><%= o.name %><% end %></td>
                        </tr>
                    <% end %>
                </table>
            </div>
          </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <h4>
                  Comments: 
                  <button id="edit_comments" class="btn btn-xs">
                    <span class="glyphicon glyphicon-pencil"></span>
                  </button>
                </h4>
                <p id="comments"><%= @photo.comments || 'No comments.' %></p>
            </div>
        </div>
    </div>
</div>