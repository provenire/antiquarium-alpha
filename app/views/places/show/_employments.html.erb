<div class="col-sm-6">
  <div class="row">
    <div class="col-sm-8">
      <h3>Employments</h3>
    </div>
    <div class="col-sm-4">
      <br>
      <%= link_to new_employment_path(place: @place), class: 'btn btn-sm btn-default pull-right' do %>
        <span class="glyphicon glyphicon-plus"></span> New
      <% end %>
    </div>
  </div>
  
  <% if @place.employments.size > 0 %>
    <table class="table">
      <% @place.employments.each do |e| %>
        <tr>
          <td width="60">
            <%= link_to e do %>
              <% if e.person.num_photos > 0 %>
                <%= image_tag e.person.default_photo.image.event_thumb.url %>
              <% else %>
                <img data-src="holder.js/50x50" />
              <% end %>
            <% end %>
          </td>
          <td>
            <%= link_to e.person.name, e %><br>
            <%= e.title %>
          </td>
        </tr>
      <% end %>
    </table>
  <% else %>
    <p>No employments.</p>
  <% end %>
</div>