<div class="row">
  <div class="col-sm-8">
    <h2>New Event</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
        <% end %>
      </li>
      <li><a href="#">Database</a></li>
      <li><%= link_to 'Artifacts', artifacts_path %></li>
      <li><%= link_to @artifact.name, @artifact %></li>
      <li class="active">New Event</li>
    </ol>
  </div>
</div>

<%= form_for @event do |f| %>
  <%= f.hidden_field :artifact, value: @artifact %>
  <%= f.hidden_field :verb, value: @verb.keyword %>
  
  <div class="row">
    <div class="col-sm-4">
      <div class="form-group">
        <%= label_tag "Primary Actor" %>
        <%= text_field_tag :actor_primary, nil, class: 'form-control' %>
      </div>
    </div>
    
    <div class="col-sm-2">
      <br>
      <h4><%= @verb.display %></h4>
    </div>
    
    <div class="col-sm-4">
      <div class="form-group">
        <%= label_tag "Secondary Actor" %>
        <%= text_field_tag :actor_secondary, nil, class: 'form-control' %>
      </div>
    </div>
  </div>
  
  <div class="row">
    <div class="col-sm-6">
      <h3>Components</h3>
      
      <div class="form-group">
        <%= f.label :date %>
        <%= f.date_field :date, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :price %>
        <%= f.text_field :price, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :failed %>
        <%= f.check_box :failed, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.label :details %>
        <%= f.text_area :details, rows: 5, class: 'form-control' %>
      </div>
      
      <%= f.submit 'Create', class: 'btn btn-primary' %>
      
    </div>
  </div>
  
<% end %>