<div class="row">
  <!-- Name -->
  <div class="col-lg-9">
    <h2>
      <% if editable_object? @person %>
        <span id="name"
          data-type="text"
          data-pk=<%= @person.uuid %>
          data-url="/people/<%= @person.uuid %>"
          data-title="Name">
          <%= @person.name %> 
        </span>
        <button id="edit_name" class="btn btn-xs">
          <span class="glyphicon glyphicon-pencil"></span>
        </button>
      <% else %>
        <%= @person.name %>
      <% end %>
    </h2>
  </div>
  <div class="col-lg-3">
    <br/>
    <div class="pull-right">
      <a href="#" class="btn btn-warning btn-sm">
        <span class="glyphicon glyphicon-th-list"></span> 
        History
      </a>
      <a href="#" class="btn btn-danger btn-sm">
        <span class="glyphicon glyphicon-remove"></span> 
        Delete
      </a>
    </div>
  </div>
</div>

<div class="row">
  
  <!-- Breadcrumb -->
  <div class="col-lg-8">
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
        <% end %>
      </li>
      <li><a href="#">Database</a></li>
      <li><%= link_to 'People', people_path %></li>
      <li class="active"><%= @person.name %></li>
    </ol>
    <% if editable_object? @person %>
      <p id="description"
        data-type="textarea"
        data-rows="10"
        data-pk=<%= @person.uuid %>
        data-url="/people/<%= @person.uuid %>"
        data-title="Description">
        <%= @person.description %>
      </p>
      <p>
        <button id="edit_description" class="btn btn-xs">
          <span class="glyphicon glyphicon-pencil"></span>
        </button>
      </p>
    <% else %>
      <p><%= @person.description %></p>
    <% end %>
  </div>

  <!-- Photos -->
  <%= render partial: 'photos/partials/photos', locals: { object: @person } %>
  

</div>

<div class="row">
  
  <div class="col-sm-4">
    <h3>Artifacts</h3>
  </div>
  
  <!-- Employments -->
  <%= render partial: 'people/show/employments', object: @person %>
  
  <!-- Properties -->
  <%= render partial: 'people/show/details', object: @person %>
  
</div>

<%= render partial: 'photos/partials/upload_photo', locals: { object: @person } %>