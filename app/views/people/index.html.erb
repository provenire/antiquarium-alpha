<div class="row">
  <!-- Name -->
  <div class="col-lg-8">
    <h2>People</h2>
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
        <% end %>
      </li>
      <li><a href="#">Database</a></li>
      <li class="active">People</li>
    </ol>
  </div>
</div>

<div class="row">
  <!-- Breadcrumbs -->
  <div class="col-lg-8">

    <%= page_entries_info @people %>

    <table class="table table-striped table-hover">
      <% @people.each do |p| %>
        <tr>
          <td class="col-sm-2">
            <% if p.num_photos > 0 %>
              <%= link_to p do %>
                <%= image_tag p.default_photo.image.object_thumb.url, class: 'img-responsive' %>
              <% end %>
            <% else %>
              <%= link_to p do %>
                <img data-src="holder.js/95x95/text:No Photo" class="img-responsive"/>
              <% end %>
            <% end %>
          </td>
          <td>
            <h4><%= link_to p.name, p %></h4>
            <p><small><%= p.description %></small></p>
          </td>
        </tr>
      <% end %>
    </table>
    
    <%= paginate @people %>
  </div>
  
  <div class="col-lg-4">
    <h3>Filter Results</h3>
    <div class="well">
      <form id="filter">
      
        <div class="checkbox">
          <label>
            <%= check_box_tag 'has_artifacts', nil, @filters["has_artifacts"] %> Has Artifacts
          </label>
        </div>
        
        <div class="checkbox">
          <label>
            <%= check_box_tag 'has_photos', nil, @filters["has_photos"] %> Has Photos
          </label>
        </div>
        
        <div class="checkbox">
          <label>
            <%= check_box_tag 'has_employments', nil, @filters["has_employments"] %> Has Employments
          </label>
        </div>
      
        <br>
        <button type="submit" class="btn btn-default">Filter</button>
      
      </form>
    </div>
  </div>

</div>