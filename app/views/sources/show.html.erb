<div class="row">
  <!-- Name -->
  <div class="col-lg-9">
    <h2>
      <% if editable_object? @source %>
        <span id="name"
          data-type="text"
          data-pk=<%= @source.uuid %>
          data-url="/sources/<%= @source.uuid %>"
          data-title="Name">
          <%= @source.name %> 
        </span>
        <button id="edit_name" class="btn btn-xs">
          <span class="glyphicon glyphicon-pencil"></span>
        </button>
      <% else %>
        <%= @source.name %>
      <% end %>
    </h2>
  </div>
  <div class="col-lg-3">
    <br/>
    <div class="pull-right">
      <a href="#" class="btn btn-warning btn-sm">
        <span class="glyphicon glyphicon-th-list"></span> 
        History
      </a>
      <a href="#" class="btn btn-danger btn-sm">
        <span class="glyphicon glyphicon-remove"></span> 
        Delete
      </a>
    </div>
  </div>
</div>

<div class="row">
  
  <!-- Breadcrumb -->
  <div class="col-lg-8">
    <ol class="breadcrumb">
      <li>
        <%= link_to root_path do %>
          <span class="glyphicon glyphicon-home"></span>
        <% end %>
      </li>
      <li><a href="#">Database</a></li>
      <li><%= link_to 'Sources', sources_path %></li>
      <li class="active"><%= @source.name %></li>
    </ol>
    <% if editable_object? @source %>
      <p id="description"
        data-type="textarea"
        data-rows="10"
        data-pk=<%= @source.uuid %>
        data-url="/sources/<%= @source.uuid %>"
        data-title="Description">
        <%= @source.description %>
      </p>
      <p>
        <button id="edit_description" class="btn btn-xs">
          <span class="glyphicon glyphicon-pencil"></span>
        </button>
      </p>
    <% else %>
      <p><%= @source.description %></p>
    <% end %>
  </div>
  

</div>

<div class="row">
  
  <div class="col-sm-12" style="height: 800px;">
    <object data="<%= @source.document.url %>" type="application/pdf" width="100%" height="100%">
 
      <p>It appears you don't have a PDF plugin for this browser.
      No biggie... you can <a href="myfile.pdf">click here to
      download the PDF file.</a></p>
  
    </object>
  </div>
  
</div>
